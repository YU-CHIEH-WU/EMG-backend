@model EMG.Model.ImageVIew
@{
    ViewBag.Title = "UploadPhoto";
    Layout = null;
}

<style>
    /*相簿*/
    .albumback {
        position: absolute;
        margin-left: 80px;
        margin-right: 80px;
        margin-bottom: 50px;
    }

    .album {
        float: left;
        padding-top: 20px;
        padding-left: 15px;
        padding-right: 15px;
        height: 270px;
        width: 295px;
    }

    .albumImg {
        text-align: center;
        width: 265px;
        height: 200px;
    }

        .albumImg img {
            height: 100%;
        }

    .album p {
        text-align: center;
    }

    .albumTitle {
        margin-left: 80px;
        margin-right: 80px;
    }

        .albumTitle h2 {
            font-family: 微軟正黑體;
            font-weight: bold;
        }

        .albumTitle img {
            padding-top: 15px;
            padding-bottom: 10px;
        }

        .albumTitle p {
            font-family: '微軟正黑體';
            font-weight: bold;
            font-size: 18px;
        }

        .albumTitle table tr {
            line-height: 25px;
        }

    .upload {
        margin-left: 80px;
        margin-right: 80px;
        margin-bottom: 20px;
    }

        .upload p {
            line-height: 15px;
            font-size: 18px;
            font-family: 'Microsoft JhengHei';
        }

    .calbum {
        float: left;
        padding-top: 20px;
        padding-left: 15px;
        padding-right: 15px;
        height: 280px;
        width: 400px;
    }

    .calbumImg {
        text-align: center;
        width: 370px;
        height: 200px;
    }

        .calbumImg img {
            height: 100%;
        }

    .calbum p {
        text-align: center;
    }

    .inputbtn {
        width: 80px;
        height: 30px;
        background-color: #428bca;
        color: white;
        border: none;
        border-radius: 4px;
    }

    a {
        color: #FFF;
    }
</style>

<div class="albumTitle">
    <h2>新增相片</h2>
    @using (Html.BeginForm("UploadPhoto", "ActImg", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <table>
            <tr>
                <td>
                    @Html.DisplayNameFor(m => m.Sort)
                </td>
                <td>
                    @Html.DropDownListFor(m => m.Sort, (IEnumerable<SelectListItem>)ViewBag.Sort)
                    @Html.ValidationMessageFor(m => m.Sort, "", new { @class = "text-danger" })
                </td>
            </tr>
        </table>
    <table>
        <tr>
            <td>
                @Html.HiddenFor(m => m.Sort)
                @Html.LabelFor(m => m.upload)

            </td>
            <td>
                @Html.TextBoxFor(m => m.upload, new { type = "file" })
                @Html.ValidationMessageFor(m => m.upload)
            </td>
        </tr>
        <tr>
            <td>
                <input class="inputbtn" type="submit" value="新增相片" />
            </td>
        </tr>
    </table>
    }
</div>
