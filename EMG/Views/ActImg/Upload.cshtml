@model EMG.Model.ImageVIew
@{
    ViewBag.Title = "Upload";
    Layout = null;
}

<style>
    /*相簿*/
.albumback{
	position:absolute;
	margin-left:80px;
	margin-right:80px;
	margin-bottom:50px;
}

.album{
	float:left;
	padding-top:20px;
	padding-left:15px;
	padding-right:15px;
	height:270px;
	width:295px;
}
.albumImg{
	text-align:center;
	width:265px;
	height:200px;
}
.albumImg img{
	height:100%;
}
.album p{
	text-align:center;
}
.albumTitle{
	margin-left:80px;
	margin-right:80px;
}
.albumTitle h2{
	font-family:微軟正黑體;
	font-weight:bold;
}
.albumTitle img{
	padding-top:15px;
	padding-bottom:10px;
}
.albumTitle p{
	font-family:'微軟正黑體';
	font-weight:bold;
	font-size:18px;
}
.albumTitle table tr{
	line-height: 25px;
}
.upload{
	margin-left:80px;
	margin-right:80px;
	margin-bottom:20px;
}
.upload p{
	line-height:15px;
	font-size:18px;
	font-family:'Microsoft JhengHei';
}
.calbum{
	float:left;
	padding-top:20px;
	padding-left:15px;
	padding-right:15px;
	height:280px;
	width:400px;
}
.calbumImg{
	text-align:center;
	width:370px;
	height:200px;
}
.calbumImg img{
	height:100%;
}
.calbum p{
	text-align:center;
}
.inputbtn{
	width:80px;
	height:30px;
	background-color:#428bca;
	color:white;
	border:none;
	border-radius:4px;
}
a{
    color:#FFF;
}
</style>

<div class="albumTitle">
    <h2>@Html.DisplayNameFor(m => m.Sort) @Html.DisplayTextFor(m => m.actimg.Sort)</h2>
</div>
<div class="upload">
    <p>
        @Html.DisplayNameFor(m => m.CreateTime) @Html.DisplayTextFor(m => m.actimg.CreateTime)
    </p>
    <p>
        @Html.DisplayNameFor(m => m.Brief) @Html.DisplayTextFor(m => m.actimg.Brief)
    </p>
    @Html.ActionLink("返回相片首頁", "Index", "ActImg", new { @class = "btn btn-default", @id = "btn-board" })
</div>
<div class="albumback">
    @foreach (var item in Model.FileList)
    {
        <div class="album">         
            <div class="albumImg">
                <a href="~/upload/@item.Img" rel="lightbox[g1]"><img src="@Html.Encode(Url.Content("~/FileUpload/" + item.Img))" /></a>
            </div>
            <p>
                @Html.ActionLink("刪除相片", "DeleteUpload", new { Act_Id = item.Act_Id, Sort = item.Sort })
            </p>
        </div>
    }
</div>
    